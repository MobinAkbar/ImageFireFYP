<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.education.imagefire.UserProfileActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:id="@+id/l_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/add2"
                    android:id="@+id/hostel_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />
                <LinearLayout
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginTop="15dp"
                        android:textColor="#fff"
                        android:background="@drawable/abuttonstyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"/>

                    <Button
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:background="@drawable/abuttonstyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:drawableLeft="@drawable/sex"
                android:drawablePadding="30dp"
                android:text="Name"
                android:layout_marginTop="25dp"
                android:id="@+id/name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/adres"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Adress"
                android:layout_marginTop="25dp"
                android:id="@+id/adres"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/call"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Number-1"
                android:layout_marginTop="25dp"
                android:id="@+id/num1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/call"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Number-2"
                android:layout_marginTop="25dp"
                android:id="@+id/num2"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/call"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Number-3"
                android:layout_marginTop="25dp"
                android:id="@+id/num3"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/job"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Profession"
                android:layout_marginTop="25dp"
                android:id="@+id/job"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:background="@drawable/abuttonstyle"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
