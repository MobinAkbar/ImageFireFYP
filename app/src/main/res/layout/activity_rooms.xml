<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.education.imagefire.MainActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="0"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:id="@+id/l_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="Rooms Details :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/l_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/total_rooms"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="7dp"
                    android:hint="Total Rooms"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/empty_rooms"
                    android:layout_marginLeft="5dp"
                    android:hint="Empty Rooms"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/total_beds"
                    android:layout_marginBottom="7dp"
                    android:hint="Total Beds"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/empty_beds"
                    android:hint="Empty Beds"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:id="@+id/l_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="Prizes Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
                <LinearLayout
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:text="Rooms:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:text="Beds:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:id="@+id/l_7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/r_prizemont"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="7dp"
                    android:hint="Per month Rs/"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/r_prize6month"
                    android:layout_marginLeft="5dp"
                    android:hint="Six month Rs/ "
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/b_prize1month"
                    android:layout_marginBottom="7dp"
                    android:hint="Per month Rs/"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/b_prize6month"
                    android:hint="Six month Rs/"
                    android:background="@drawable/editdesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorAccent"
                android:text="Nearby Universities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:layout_weight="0.5"
                    android:text="Uni1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:background="@drawable/spinner_border"
                    android:layout_marginRight="5dp"
                    android:id="@+id/spin_1"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:layout_weight="0.5"
                    android:text="Uni2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:background="@drawable/spinner_border"
                    android:id="@+id/spin_2"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:layout_weight="0.5"
                    android:text="Uni3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:background="@drawable/spinner_border"
                    android:layout_marginRight="5dp"
                    android:id="@+id/spin_3"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginBottom="5dp"
                android:id="@+id/upload3"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:background="@color/colorAccent"
                android:text="upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>>
    </ScrollView>
</RelativeLayout>
