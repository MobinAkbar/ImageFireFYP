<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.education.imagefire.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/l_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="50dp"
                android:src="@drawable/add2"
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="130dp" />
            <LinearLayout
                android:layout_marginLeft="18dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="clean"
                    android:id="@+id/removes"
                    android:layout_marginTop="15dp"
                    android:textColor="#fff"
                    android:background="@drawable/abuttonstyle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="remove"/>

                <Button
                    android:onClick="chooose"
                    android:text="Choose"
                    android:id="@+id/choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/abuttonstyle"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="150dp" />-->

        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/profile"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter your Full name"
            android:id="@+id/e1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/call"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter your contact number"
            android:id="@+id/e2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/adres"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter your address in lahore"
            android:id="@+id/e3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/sex"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Gender: Male/Female"
            android:id="@+id/e4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/schol"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter your university "
            android:id="@+id/e5"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_below="@+id/l1"
            android:id="@+id/l2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:text="upload"
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="Next"
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>
