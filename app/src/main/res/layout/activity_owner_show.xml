<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.education.imagefire.ShowdataActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:id="@+id/l2_a"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <ImageView
                    android:id="@+id/image"
                    android:scaleType="fitXY"
                    android:src="@drawable/h11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_below="@+id/l2_a"
                android:id="@+id/l3_a"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:text="COMSATS HOSTEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/address"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="H-Block , Defence Road, Off Raiwind Road, Lahore."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/v1_a"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l2_a"
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:background="#000" />



            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_below="@+id/l3_a"
                android:orientation="vertical"
                android:id="@+id/l4_a"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="Available rooms:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/rooms"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_marginLeft="20dp"
                    android:text="Available rooms:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:text="Available Beds:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/beds"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_marginLeft="20dp"
                        android:text="Available rooms:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:layout_marginLeft="90dp"
                        android:text="Update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/v2_a"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l4_a"
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:background="#000" />


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@+id/l4_a"
                android:id="@+id/l5_a"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Rooms Slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




                </LinearLayout>

            <View
                android:id="@+id/v3_a"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l5_a"
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:background="#000" />


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@+id/l5_a"
                android:id="@+id/l6_a"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Nearby Places Slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <View
                android:id="@+id/v4_a"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l6_a"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#000" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@+id/l6_a"
                android:id="@+id/l7_a"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Facilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_wifi_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"

                        android:text="Free WiFi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_menu_manage"
                        android:layout_marginLeft="100dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_marginTop="10dp"

                        android:layout_marginLeft="20dp"
                        android:text="Electrition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_directions_bike_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"

                        android:text="Parking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_menu_gallery"
                        android:layout_marginLeft="113dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_marginTop="10dp"

                        android:layout_marginLeft="20dp"
                        android:text="Gallry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:clickable="true"
                        android:id="@+id/seeall"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="#FF9224"
                        android:text="... See all facilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/v5_a"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l7_a"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#000" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l7_a"
                android:id="@+id/l8_a"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Owner Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/oname"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/oemail"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/onumb1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="Number 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/onumb2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="Number 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:id="@+id/v444"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l8_a"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#000" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l8_a"
                android:id="@+id/l4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Property Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000"
                    android:id="@+id/properr"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="Hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>




        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

