<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.education.imagefire.UserProfileActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:id="@+id/l_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/add2"
                    android:id="@+id/hostel_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />
                <LinearLayout
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:onClick="clean"
                        android:id="@+id/removesz"
                        android:layout_marginTop="15dp"
                        android:textColor="#fff"
                        android:background="@drawable/abuttonstyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="remove"/>

                    <Button
                        android:onClick="chosen"
                        android:id="@+id/choosesz"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:background="@drawable/abuttonstyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:drawableLeft="@drawable/sex"
                android:drawablePadding="30dp"
                android:text="Name"
                android:layout_marginTop="25dp"
                android:id="@+id/namez"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/adres"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Address"
                android:layout_marginTop="25dp"
                android:id="@+id/adresz"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/call"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Number"
                android:layout_marginTop="25dp"
                android:id="@+id/numz"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/schol"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="University"
                android:layout_marginTop="25dp"
                android:id="@+id/uniz"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableLeft="@drawable/sex"
                android:drawablePadding="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Gender"
                android:layout_marginTop="25dp"
                android:id="@+id/sexz"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="uploads"
                android:layout_marginBottom="8dp"
                android:id="@+id/savesz"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:background="@drawable/abuttonstyle"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
