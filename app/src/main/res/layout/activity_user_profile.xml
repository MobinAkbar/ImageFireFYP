<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.education.imagefire.UserProfileActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:background="#1F1F1F"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:id="@+id/image20"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/name20"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textviewdesign"
                android:layout_weight="1"
                android:textSize="29dp"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/address20"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textviewdesign"
                android:layout_weight="1"
                android:textSize="29dp"
                android:text="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/numb20"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textviewdesign"
                android:layout_weight="1"
                android:textSize="29dp"
                android:text="Contact Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/univ20"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textviewdesign"
                android:layout_weight="1"
                android:textSize="29dp"
                android:text="University"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatCheckBox
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:id="@+id/male20"
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatCheckBox
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:id="@+id/female20"
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:id="@+id/mail20"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textviewdesign"
                android:layout_weight="1"
                android:textSize="29dp"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/password20"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/textviewdesign"
                android:layout_weight="1"
                android:textSize="29dp"
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/editchange20"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorAccent"
                android:text="Edit Changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
